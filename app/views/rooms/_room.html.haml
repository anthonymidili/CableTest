.cell.medium-6
  .callout
    - if room_creator?(room)
      .float-right
        %ul.menu.simple
          %li
            = link_to edit_room_path(room) do
              %i.fa-solid.fa-edit
          %li
            = link_to room, method: :delete, data: { confirm: 'Are you sure?' }, class: 'red' do
              %i.fa-solid.fa-trash
    = link_to room do
      %h5= room.name
      = render 'rooms/active_users', room: room
